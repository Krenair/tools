#!/usr/bin/env python
import sys
from subprocess import call

import sr.tools.inventory as srinv
import sr.tools.inventory.assetcode as assetcode
import sr.tools.inventory.oldinv as oldinv
import os


if len(sys.argv) < 2:
    print("Usage: inv-edit PART_CODES", file=sys.stderr)
    exit(1)

top = oldinv.gettoplevel()
if top == None:
    print >>sys.stderr, "Error: Must be run from within the inventory."
    exit(1)
inv = srinv.Inventory(top)

parts = []
for c in sys.argv[1:]:
    code = c.upper().strip()
    if code[0:2] == "SR":
        code = code[2:]

    try:
        assetcode.code_to_num(code)
    except:
        print >>sys.stderr, "Error: %s is an invalid code." % code
        exit(1)

    try:
        part = inv.root.parts[code]
    except KeyError:
        print >>sys.stderr, "Error: There is no part with code %s." % code
        exit(1)

    parts.append(part)

editor = os.getenv( "EDITOR", "vi" )

for part in parts:
    r = call( "%s %s" % (editor, part.path),
              shell = True )
