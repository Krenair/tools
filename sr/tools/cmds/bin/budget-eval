#!/usr/bin/env python
# -*- coding: utf-8 -*-
import sys, sympy
import sr.budget as budget
from decimal import Decimal as D

def usage():
    print "Usage: budget-eval EXPRESSION"

if len(sys.argv) != 2:
    usage()
    exit(1)

EXPR = sys.argv[1]

try:
    root = budget.find_root()
except budget.NotBudgetRepo:
    print >>sys.stderr, "Error: Please run in budget.git"
    exit(1)

t = budget.load_budget( root )

config = None

# find the first BudgetItem to get its config
for i in t.walk():
    if isinstance(i, budget.BudgetItem):
        config = i.conf
        break

assert config != None

r = sympy.S( EXPR )
r = D( "%.2f" % r.evalf( subs = config.vars ) )

print r
