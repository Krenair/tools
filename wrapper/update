#!/usr/bin/env python
import sys, os, subprocess
TOOLS_DIR = os.path.join( sys.path[0], ".." )

# Update git
print "Updating git...",
sys.stdout.flush()

p = subprocess.Popen( "git pull -q origin master",
                      cwd = TOOLS_DIR,
                      shell = True )
p.communicate()
p.wait()
print "done."
